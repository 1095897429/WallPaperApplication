<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:paddingTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.constraint.ConstraintLayout
    android:layout_width="162dp"
    android:layout_height="216dp"
    android:background="@drawable/recommand_bg"
    >

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="162dp"
        android:layout_height="216dp" />

    <ImageView
        android:id="@+id/icon_love"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/recommend_unlove"
        />

    <TextView
        android:id="@+id/live_or_ad"
        android:text="live"
        android:visibility="gone"
        android:textSize="12sp"
        android:background="@drawable/live_ad_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:id="@+id/bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/recommand_bottom_bg"
        android:layout_width="wrap_content"
        android:layout_height="28dp">

    </View>



    <ImageView
        android:id="@+id/author_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/author_head"
        />


    <TextView
        android:id="@+id/author_name"
        android:text="鸟哥"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/author_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>

</LinearLayout>