<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:paddingRight="10dp"
            android:paddingLeft="12dp"
            android:layout_width="35dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/down"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </RelativeLayout>

    <LinearLayout
        android:id="@+id/part"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#252C59">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/part1"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/default_icon"
                android:src="@mipmap/delete_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="15dp"
                android:layout_height="16dp" />

            <TextView
                android:text="清除缓存"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/default_icon"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/delete_text"
                android:text="373M"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="12sp"
                android:textColor="#AEB0BE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#2f3560"></View>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/part2"
            app:layout_constraintTop_toBottomOf="@+id/part1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/default_1_icon"
                android:src="@mipmap/delete_1_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="15dp"
                android:layout_height="16dp" />

            <TextView
                android:text="自动清除设置"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/default_1_icon"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/delete_1_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/icon_save"
                android:layout_width="7dp"
                android:layout_height="12dp" />

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#2f3560"></View>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/part3"
            app:layout_constraintTop_toBottomOf="@+id/part2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/safe_icon"
                android:src="@mipmap/delete_1_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="15dp"
                android:layout_height="16dp" />

            <TextView
                android:text="免责条款"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/safe_icon"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/safe_right_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/icon_save"
                android:layout_width="7dp"
                android:layout_height="12dp" />

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#2f3560"></View>


        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/part4"
            app:layout_constraintTop_toBottomOf="@+id/part3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/about_icon"
                android:src="@mipmap/icon_about"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="15dp"
                android:layout_height="16dp" />

            <TextView
                android:text="关于"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/about_icon"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/about_right_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/icon_save"
                android:layout_width="7dp"
                android:layout_height="12dp" />


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        android:textColor="#AEB0BE"
        android:textSize="14sp"
        android:text="退出登录"
        android:padding="10dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    



</android.support.constraint.ConstraintLayout>