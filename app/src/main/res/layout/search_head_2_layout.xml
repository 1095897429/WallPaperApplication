<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/search_part_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/index_search_bg"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/index_search_icon"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <com.ngbj.wallpaper.utils.widget.EditTextWithDel
                android:id="@+id/edittext"
                android:textColor="#989AA6"
                android:textSize="12sp"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="动态"
                android:background="@null"
                android:hint="@string/index_search"
                android:imeOptions="actionSearch"
                android:textColorHint="#989AA6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/cancel"
            android:text="取消"
            android:textColor="#F8AB4C"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
